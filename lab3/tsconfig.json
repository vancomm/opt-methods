{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2021",
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./built",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}